<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Slothfulness</th>
      <th>Steam name</th>
      <th>Slack name</th>
      <th>Id</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.slothfulness %></td>
        <td><%= player.steam_name %></td>
        <td><%= player.slack_name %></td>
        <td><%= player.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
